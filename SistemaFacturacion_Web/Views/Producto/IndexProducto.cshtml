@model IEnumerable<SistemaFacturacion_Web.Models.DTO.ProductoDTO>
@{
    ViewData["Title"] = "IndexProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Listado de Productos</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Producto" asp-action="CrearProducto" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Crear nuevo Producto</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descripcion</th>
                <th>Codigo de Barras</th>
                <th>Marca</th>
                <th>Precio Venta</th>
                <th>Precio Compra</th>
                <th>Fecha Vencimiento</th>
                <th>Tipo Impuesto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Articulonro</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Codigobarra</td>
                    <td>@item.Marca?.Descripcion</td>                    
                    <td>@item.Precio.ToString("N0")</td>
                    <td>@item.PrecioCompra.ToString("N0")</td>
                    <td>@item.Fechavencimiento</td>
                    <td>@item.TipoImpuesto?.Descripcion</td>
                    <td>
                        <a asp-controller="Producto" asp-action="ActualizarProducto" asp-route-productoId="@item.Articulonro" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Producto" asp-action="EliminarProducto" asp-route-productoId="@item.Articulonro" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>

