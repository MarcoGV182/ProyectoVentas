@model SistemaFacturacion_Web.Models.DTO.MarcaDTO
@{
    ViewData["Title"] = "EliminarMarca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="EliminarMarca">
    <div class="container border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="Marcanro" />

        <div cite="row">
            <h2 class="text-info">Eliminar Marca</h2>
        </div>

        <!--Campo Código-->
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Código</label>
                <input asp-for="Marcanro" disabled class="form-control" />                
            </div>
        </div>

        <!--Campo Descripción-->
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Descripcion</label>
                <input asp-for="Descripcion" disabled class="form-control" />                
            </div>
        </div>

        <!--Botones-->
        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Marca" asp-action="IndexMarca" class="btn btn-success">Regresar</a>
        </div>
    </div>
</form>


